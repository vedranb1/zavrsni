@model Redis.ViewModels.ShopViewModel
@{
    ViewData["Title"] = "Shop";
}

<div class="modal fade" id="addGameModal" tabindex="-1" aria-labelledby="addGameModalLabel" aria-hidden="true">
    <form class="modal-dialog" method="post" asp-controller="Shop" asp-action="AddGame">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addGameModalLabel">Modal title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="mb-3">
                    <label class="form-label" asp-for="@Model.Name">Name</label>
                    <input type="text" asp-for="@Model.Name" class="form-control" />
                    <span asp-validation-for="@Model.Name" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label class="form-label" asp-for="@Model.Genre">Genre</label>
                    <input type="text" asp-for="@Model.Genre" class="form-control" />
                    <span asp-validation-for="@Model.Genre" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label class="form-label" asp-for="@Model.Price">Price</label>
                    <input type="number" asp-for="@Model.Price" class="form-control" />
                    <span asp-validation-for="@Model.Price" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label class="form-label" asp-for="@Model.ImageUrl">Image URL</label>
                    <input type="text" asp-for="@Model.ImageUrl" class="form-control" />
                    <span asp-validation-for="@Model.ImageUrl" class="text-danger"></span>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="submit" class="btn btn-success">Save changes</button>
            </div>
        </div>
    </form>
</div>

<div class="d-flex justify-content-between align-items-center">
    <h1 class="mb-2">Shop</h1>
    <button type="button" class="btn btn-success" data-toggle="modal" data-target="#addGameModal">
        Add New Game
    </button>
</div>

<table class="table">
    <thead class="thead-light">
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Genre</th>
            <th scope="col">Price</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var game in Model.Games)
        {
        <tr>
            <th scope="row"><img src="@game.ImageUrl" alt="@game.Name" style="width: 150px" /></th>
            <td>@game.Name</td>
            <td>@game.Genre</td>
            <td><span>@game.Price</span>€</td>
            <td><button type="button" class="btn btn-info" onclick="addToCart(@game.Id)">Dodaj u košaricu</button></td>
        </tr>
        }
    </tbody>
</table>