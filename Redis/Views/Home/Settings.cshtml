@model Redis.ViewModels.SettingsViewModel
@{
    ViewData["Title"] = "Cart";
}

<div class="container">
    <div class="row justify-content-center align-items-center">
        <div class="col-sm-12 col-md-12 col-lg-4">
            <h1 class="mb-3">User settings</h1>

            <form method="post" asp-controller="Home" asp-action="SaveSettings">
                <div class="mb-3">
                    <label class="form-label" asp-for="@Model.DarkTheme">Dark Mode</label>
                    <input type="checkbox" asp-for="@Model.DarkTheme" aria-label="Checkbox for following text input" value="true">
                </div>
                <div class="mb-3">
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>